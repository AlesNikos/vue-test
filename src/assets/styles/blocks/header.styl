.header 
	padding 12px 0
	background-color #282a2d

	&__inner 
		display flex
		align-items center

	&__logo 
		position relative
		display flex
		align-items center
		justify-content center
		width 41px
		height 56px
		margin 0 21px 0 8px
		transition: 0.3s
		
	&__logo-img
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
		width 100%
		height 100%

	&__title 
		ff $nb
		margin 5px 0 4px
		color #fff
		font-size 32px
		font-weight 400
		font-style normal
		letter-spacing normal
		line-height 22px

	&__subtitle 
		ff $pt
		color #ebf4ff
		opacity 0.25
		font-size 11px
		font-weight 400
		font-style normal
		letter-spacing normal
		line-height 16px